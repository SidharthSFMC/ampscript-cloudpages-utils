%%[
/*this code is to update the subscriber status to unsubscribe */
SET @subscriberkey=AttributeValue("_subscriberkey")
SET @status="Unsubscribed"
SET @emailAddress=AttributeValue("emailaddr")


/*Get the subaccount business unit MID*/
SET @businessunit_MID=AuthenticatedMemberID()




/*Create a subscriber object */

SET @subscriber = CreateObject("Subscriber")
/*Now Define the value of a property of a Subscriber API Object*/
SetObjectProperty(@subscriber,"Status",@status) /*Status is provided */
SetObjectProperty(@subscriber,"SubscriberKey",@subscriberkey) /*Ensure SubscriberKey is there*/

/* Create a ClientId Object */
SET @clientID= CreateObject("ClientID")
/*Now define the value of a property of clientid object */
SetObjectProperty(@clientID,"ID",@businessunit_MID)
SetObjectProperty(@clientID,"IDSpecified","true")
SetObjectProperty(@subscriber,"Client",@clientID)


/*Now Create a Save Object and the use it in Options */
SET @updateOptions = CreateObject("UpdateOptions")
SET @saveOptions=CreateObject("SaveOption")
SetObjectProperty(@saveOptions,"SaveAction","UpdateAdd")
SetObjectProperty(@saveOptions,"PropertyName","*")
AddObjectArrayItem(@updateOptions,"SaveOptions",@saveOptions)


/*Update the Subscriber status with new status*/
set @subscribersStatus=InvokeUpdate(@subscriber,@update_sub_status, @update_sub_errorcode,@updateOptions)
]%%
